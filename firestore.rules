rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can fully read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Everything else read-only for now
    match /{document=**} {
      allow read: if true;
    }
  }
}
